<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true"> <!--IMPORTANT otherwise backgrnd img. will not fill the whole screen -->


<LinearLayout
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.hakan.aesdeneme4.MainActivity" >

    <EditText
        android:id="@+id/Input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/Input"
        android:layout_below="@+id/Input"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Mesaj" />

    <Button
        android:id="@+id/enbutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ŞİFRELE" />

    <EditText
        android:id="@+id/raw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/raw"
        android:layout_below="@+id/raw"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="" />

    <Button
        android:id="@+id/debutton"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="DEŞİFRE" />

    <EditText
        android:id="@+id/originText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originText"
        android:layout_below="@+id/originText"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="" />

    <Button
        android:id="@+id/key"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="ANAHTAR" />
    <EditText
        android:id="@+id/originText2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/originText"
        android:layout_below="@+id/originText"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="" />

</LinearLayout>
</ScrollView>